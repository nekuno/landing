{% extends 'QnoowLandingBundle:layout:base.html.twig' %}

{% block body %}
        <div class="container simple-page-container">
            {% include 'QnoowLandingBundle:layout:header-container.html.twig' %}
            <div class="main-container">
                <div class="main wrapper clearfix">
                    <article>
                        <section>
                            <h2>Error {{ exception.statusCode }}</h2>

                            <p>
                                {{ 'exception.exception.message'|trans }}
                            </p>

                            <p>
                                {{ 'exception.exception.return'|trans({'%url%': path('qnoow_landing_homepage')})|raw }}
                            </p>
                        </section>
                    </article>
                </div>
            </div>
            {% include 'QnoowLandingBundle:layout:footer-container.html.twig' %}
        </div>
{% endblock %}